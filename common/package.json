  ],
  "scripts": {
    "build": "nest build",
    "build:prod": "tsc -p tsconfig.build.json",
    "build:webpack": "webpack --config webpack.config.js",
    "build:watch": "nest build --watch",
    "format": "prettier --write \"src/**/*.ts\"",
