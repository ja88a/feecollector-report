  "dependencies": {
    "@lifi/types": "^11.3.0",
    "@nestjs/common": "^10.3.3",
    "ethers": "^5.7.2",
    "kindagoose": "^1.3.8",
    "@typegoose/typegoose": "^12.2.0",
